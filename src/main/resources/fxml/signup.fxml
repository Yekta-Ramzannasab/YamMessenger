<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yamyam.messenger.client.gui.controller.SignUpController">
    <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" styleClass="signup-container">

        <Label text="Create an Account" styleClass="title-label"/>

        <TextField fx:id="nameField" promptText="Full Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button text="Sign Up" onAction="#handleSignUp" styleClass="signup-button"/>

        <Label text="Already have an account? Login" onMouseClicked="#handleGoToLogin"
               styleClass="link-label"/>

    </VBox>
</AnchorPane>


