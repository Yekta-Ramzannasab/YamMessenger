<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="700" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #6a11cb, #2575fc);"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yamyam.messenger.client.gui.controller.VerifyController">

    <children>

        <Label layoutX="200" layoutY="120" text="Enter the 6-digit code sent to your email"
               style="-fx-text-fill: white; -fx-font-size: 20px;" />

        <TextField fx:id="codeField" layoutX="200" layoutY="180" prefWidth="300"
                   promptText="e.g. 123456"
                   style="-fx-font-size: 18px; -fx-alignment: center; -fx-background-radius: 10;" />

        <Label fx:id="errorLabel" layoutX="200" layoutY="220" text=""
               style="-fx-text-fill: red;" />

        <Button text="Verify" layoutX="200" layoutY="260" onAction="#handleVerify"
                style="-fx-font-size: 16px; -fx-background-radius: 20;" />

    </children>
</AnchorPane>
